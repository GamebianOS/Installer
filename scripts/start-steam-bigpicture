#!/bin/bash
# Start Steam Big Picture (for live system)
# Simple launcher for testing Steam in live environment

export DISPLAY=:0

# Check if Steam is installed
if ! command -v steam &> /dev/null; then
    zenity --error --text="Steam is not installed in the live environment.\nPlease install GamebianOS to use Steam."
    exit 1
fi

# Start Steam in Big Picture mode
steam -bigpicture &
